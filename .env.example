# ─────────── App ───────────
PORT=4000

# ─────────── MongoDB ───────────
# Format: mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>/<DB_NAME>?retryWrites=true&w=majority&appName=<APP_NAME>
MONGODB_URL=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER>.mongodb.net/<DB_NAME>?retryWrites=true&w=majority&appName=<APP_NAME>

# ─────────── JWT & Session ───────────
JWT_SECRET=<RANDOM_LONG_SECRET>
JWT_EXPIRE_IN=10d          # e.g., 1h, 7d, 10d
SESSION_SECRET=<ANOTHER_RANDOM_SECRET>
SALT=10                    # bcrypt salt rounds

# ─────────── Email (Nodemailer + Gmail) ───────────
HOST_MAIL=<YOUR_GMAIL_ADDRESS>
APP_PASSWORD=<GMAIL_APP_PASSWORD>   # 16‑char “App password” from Google

# ─────────── Google OAuth 2.0 ───────────
GOOGLE_CLIENT_ID=<GOOGLE_OAUTH_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<GOOGLE_OAUTH_CLIENT_SECRET>

# ─────────── Firebase Cloud Storage ───────────
STORAGE_BUCKET=<YOUR_FIREBASE_BUCKET>.appspot.com